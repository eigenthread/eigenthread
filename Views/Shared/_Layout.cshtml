    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PatentPrepper &reg;</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/general.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eigenthread.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/queries.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/img/logo_output.png" />
    <style>
        .cc-window {
            width: 100% !important;
            left: 0 !important;
            right: 0 !important;
            bottom: 0 !important;
            position: fixed !important;
            z-index: 9999; /* Ensure this is higher than .cc-overlay */
            background-color: var(--color-background); /* Use a variable for background color */
            padding: 1rem; /* Use rem for padding */
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1); /* Optional: Add a shadow for better visibility */
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .cc-window p {
            margin: 0;
            color: var(--color-text); /* Use a variable for text color */
        }
        .cc-window button {
            background-color: var(--color-primary); /* Use a variable for button background color */
            color: var(--color-button-text); /* Use a variable for button text color */
            border: none;
            padding: 0.5rem 1rem;
            cursor: pointer;
            border-radius: 0.25rem;
        }
        .cc-window button:hover {
            background-color: var(--color-primary-dark); /* Use a variable for button hover background color */
        }
        .cc-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 9998;
        }
    </style>
</head>
<body>
    <header class="header nav-open">
       <a href="/">
           <img class="logo" src="~/img/PatentPrepper_Logo.png">
       </a>
       <nav class="main-nav">
           <ul class="main-nav-list">
                <li><a class="main-nav-link glowing-button" href="/uspto-patent-search">Claims Construction Manual</a></li>
                <li><a class="main-nav-link glowing-button" asp-area="" asp-controller="Home" asp-action="Cart">Patent Books</a></li>
                <li><a class="main-nav-link neon-button" asp-area="" asp-controller="Home" asp-action="Ucsb">Referral-Links</a></li>
           </ul>
       </nav>

       <button class="btn-mobile-nav">
            <ion-icon class="icon-mobile-nav" name="menu-outline"></ion-icon>
            <ion-icon class="icon-mobile-nav" name="close-outline"></ion-icon>
       </button>
    </header>
    <main>
        @RenderBody()
    </main>

    <!-- Cookies Banner -->
    <div class="cc-window" id="cookieConsentBanner">
        <p>We use cookies to ensure you get the best experience on our website. <a href="@Url.Action("PrivacyTerms", "Home")">Learn more</a></p>
        <div class="cc-buttons">
            <button onclick="acceptCookies()">Accept</button>
            <button onclick="manageCookies()">Manage Preferences</button>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        function setCookie(name, value, days) {
            const d = new Date();
            d.setTime(d.getTime() + (days * 24 * 60 * 60 * 1000));
            const expires = "expires=" + d.toUTCString();
            document.cookie = name + "=" + value + ";" + expires + ";path=/";
        }

        function getCookie(name) {
            const value = "; " + document.cookie;
            const parts = value.split("; " + name + "=");
            if (parts.length == 2) return parts.pop().split(";").shift();
        }

        // Check if the user has already accepted cookies
        if (getCookie("cookieConsent") !== "accepted") {
            document.getElementById("cookieConsentBanner").style.display = "block";
        }

        function acceptCookies() {
            setCookie("cookieConsent", "accepted", 365);
            document.getElementById("cookieConsentBanner").style.display = "none";
        }

        function manageCookies() {
            // Implement your manage cookies logic here
        }
    </script>
    <style>
        .cc-window {
            width: 100% !important;
            left: 0 !important;
            right: 0 !important;
            bottom: 0 !important;
            position: fixed !important;
            z-index: 9999; /* Ensure this is higher than .cc-overlay */
            background-color: var(--color-background); /* Use a variable for background color */
            padding: 2rem; /* Increase padding for larger size */
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1); /* Optional: Add a shadow for better visibility */
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 1.25rem; /* Increase font size */
        }
        .cc-window p {
            margin: 0;
            color: var(--color-text); /* Use a variable for text color */
        }
        .cc-buttons {
            display: flex;
            gap: 1rem;
        }
        .cc-window button {
            background-color: var(--color-primary); /* Use a variable for button background color */
            color: var(--color-button-text); /* Use a variable for button text color */
            border: none;
            padding: 0.75rem 1.5rem; /* Increase padding for buttons */
            cursor: pointer;
            border-radius: 0.25rem;
            font-size: 1rem; /* Increase font size for buttons */
        }
        .cc-window button:hover {
            background-color: var(--color-primary-dark); /* Use a variable for button hover background color */
        }
        .cc-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 9998;
        }
    </style>
</body>
</html>
