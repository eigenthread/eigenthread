@{
    ViewData["Title"] = "EBooks";
}

<h1>Kindle E-Book Sales Funnel</h1>

<div class="sales-funnel">
    <div class="step" id="step1">
        <h2>Step 1: Choose Your E-Book</h2>
        <button onclick="goToStep(2)">Next</button>
    </div>
    <div class="step" id="step2" style="display:none;">
        <h2>Step 2: Enter Your Details</h2>
        <form id="detailsForm">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <button type="submit">Submit</button>
        </form>
    </div>
    <div class="step" id="step3" style="display:none;">
        <h2>Step 3: Confirmation</h2>
        <p>Thank you for your purchase!</p>
    </div>
</div>

@section Scripts {
    <script>
        function goToStep(stepNumber) {
            // Hide all steps
            document.querySelectorAll('.step').forEach(step => step.style.display = 'none');
            // Show the selected step
            document.getElementById('step' + stepNumber).style.display = 'block';
        }

        document.getElementById('detailsForm').addEventListener('submit', function(event) {
            event.preventDefault();
            // Perform form validation and submission logic here
            // For now, just go to the next step
            goToStep(3);
        });
    </script>
}
